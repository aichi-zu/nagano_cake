<div class="container">
  <div class="row" style="margin: 40px 0;">
    <div class="col-lg-12 d-flex align-items-center justify-content-between">
      <div class="title-background" style="background-color: #f0f0f0; padding: 0px 20px; border-radius: 4px;">
        <h4>会員情報編集</h4>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
        <div class="row">
          <div class="col-md-6">
            <table class="table">
              <tbody>
                <tr>
                  <th><%= f.label :last_name, "氏名" %></th>
                  <td>
                    <div class="row">
                      <div class="col-md-6"><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %></div>
                      <div class="col-md-6"><%= f.text_field :first_name, autocomplete: "first_name", class: "form-control" %></div>
                    </div>
                  </td>
                </tr>
                <tr>
                  <th><%= f.label :last_name_kana, "フリガナ" %></th>
                  <td>
                    <div class="row">
                      <div class="col-md-6"><%= f.text_field :last_name_kana, autocomplete: "last_name_kana", class: "form-control" %></div>
                      <div class="col-md-6"><%= f.text_field :first_name_kana, autocomplete: "first_name_kana", class: "form-control" %></div>
                    </div>
                  </td>
                </tr>
                <tr>
                  <th><%= f.label :post_code, "郵便番号" %></th>
                  <td><%= f.text_field :post_code, autocomplete: "post_code", class: "form-control" %></td>
                </tr>
                <tr>
                  <th><%= f.label :address, "住所" %></th>
                  <td><%= f.text_field :address, autocomplete: "address", class: "form-control" %></td>
                </tr>
                <tr>
                  <th><%= f.label :phone_number, "電話番号" %></th>
                  <td><%= f.text_field :phone_number, autocomplete: "phone_number", class: "form-control" %></td>
                </tr>
                <tr>
                  <th><%= f.label :email, "メールアドレス" %></th>
                  <td><%= f.text_field :email, autocomplete: "email", class: "form-control" %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-12">
            <div class="row">
              <div class="col-md-6">
                <table class="table">
                  <tbody>
                    <tr>
                      <td colspan="2">
                        <div class="d-flex">
                          <%= f.submit '編集内容を保存', class: "btn btn-success" %>
                          <%= link_to '退会する', customers_unsubscribe_path, class: "btn btn-danger ml-2" %>
                        </div>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>