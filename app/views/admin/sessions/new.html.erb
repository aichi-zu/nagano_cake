<div class="container">
  <div class="row" style="margin: 40px 0;">
    <div class="col-lg-12 d-flex align-items-center justify-content-between">
      <div class="title-background" style="background-color: #f0f0f0; padding: 0px 20px; border-radius: 4px; display: inline-block;">
        <h4 style="margin: 0;">管理者ログイン</h4>
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-lg-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="row mb-3 justify-content-center">
          <div class="col-sm-10">
            <div class="row">
              <div class="col-sm-4 col-form-label">
                <%= f.label :email, "メールアドレス", class: "col-form-label" %>
              </div>
              <div class="col-sm-8">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
            </div>
          </div>
        </div>

        <div class="row mb-3 justify-content-center">
          <div class="col-sm-10">
            <div class="row">
              <div class="col-sm-4 col-form-label">
                <%= f.label :password, "パスワード", class: "col-form-label" %>
              </div>
              <div class="col-sm-8">
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
              </div>
            </div>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="row mb-3 justify-content-center">
            <div class="col-sm-10">
              <div class="row">
                <div class="col-sm-4 col-form-label">
                  <%= f.label :remember_me, class: "col-form-label" %>
                </div>
                <div class="col-sm-8">
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="row mb-3 justify-content-center">
          <div class="col-12 d-flex justify-content-center">
            <%= f.submit "ログイン", class: "btn btn-primary", style: "padding: 10px 30px;" %>
          </div>
        </div>

      <% end %>

      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>