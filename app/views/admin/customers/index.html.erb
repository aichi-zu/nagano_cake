<div class="container">
  <div class="row" style="margin: 40px 0;">
    <div class="col-lg-12 d-flex align-items-center justify-content-between">
      <div class="title-background" style="background-color: #f0f0f0; padding: 0px 20px; border-radius: 4px;">
        <h4>会員一覧</h4>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>会員ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to "#{customer.last_name} #{customer.first_name}", admin_customer_path(customer), style: "color: black; text-decoration: underline;" %></td>
              <td><%= customer.email %></td>
              <% if customer.is_active? %>
                <td class="text-success" style="font-weight: bold;">有効</td>
              <% else %>
                <td class="text-black-50" style="font-weight: bold;">退会</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12 d-flex justify-content-center">
      <%= paginate @customers %>
    </div>
  </div>
</div>