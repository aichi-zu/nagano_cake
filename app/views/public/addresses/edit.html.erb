<div class="container">
  <div class="row" style="margin: 40px 0;">
    <div class="col-lg-12 d-flex align-items-center justify-content-between">
      <div class="title-background" style="background-color: #f0f0f0; padding: 0px 20px; border-radius: 4px; display: inline-block;">
        <h4 style="margin: 0;">配送先編集</h4>
      </div>
    </div>
  </div>

  <div class="row" style="margin-bottom: 300px;">
    <div class="col-lg-12">
      <%= form_with model: @address do |f| %>
        <div class="form-row align-items-center">
          <div class="col-md-4">
            <%= f.label :post_code, "郵便番号(ハイフンなし)", class: "form-label" %>
            <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code", class: "form-control" %>
          </div>
        </div>
        <div class="form-row align-items-center">
          <div class="col-md-8">
            <%= f.label :address, "住所", class: "form-label" %>
            <%= f.text_field :address, autocomplete: "adderess", class: "form-control" %>
          </div>
        </div>
        <div class="form-row align-items-center">
          <div class="col-md-4">
            <%= f.label :name, "宛名", class: "form-label" %>
            <%= f.text_field :name, autocomplete: "name", class: "form-control" %>
          </div>
          <div class="col-md-auto">
            <%= f.submit '変更内容を保存', class: "btn btn-success mt-2" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>