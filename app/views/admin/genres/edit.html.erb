<%= form_with model: [:admin, @genre_edit_target] do |form_g_e_t| %>
  <div class = "container">
    <div class="row" style="margin: 40px 0;">
      <div class="col-lg-12 d-flex align-items-center justify-content-between">
        <div class="title-background" style="background-color: #f0f0f0; padding: 0px 20px; border-radius: 4px;">
          <h4 style="margin: 0;">ジャンル編集</h4>
        </div>
      </div>
    </div>

    <div class = "row" style="margin-bottom: 500px;">
      <div class = "col-lg-2">
        <strong>
          ジャンル名
        </strong>
      </div>

      <div class = "col-lg-3">
        <%= form_g_e_t.text_field :name %>
      </div>

      <div class = "col-lg-2">
        <%= form_g_e_t.submit "変更を保存", class: "btn btn-success"%>
      </div>
    </div>

  </div>

<% end %>
