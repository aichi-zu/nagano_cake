<div class="container">
  <div class="row" style="margin: 40px 0;">
    <div class="col-lg-12 d-flex align-items-center justify-content-between">
      <div class="title-background" style="background-color: #f0f0f0; padding: 0px 20px; border-radius: 4px; display: inline-block;">
        <h4 style="margin: 0;">商品新規登録</h4>
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-lg-8">
      <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
        <div class="row justify-content-center">
          <div class="col-sm-10">
            <div class="row">
              <div class="col-sm-2 col-form-label">
                <%= f.label :image, "商品画像", class: "col-form-label" %>
              </div>
              <div class="col-sm-10">
                <%= f.file_field :image, accept: "image/*" %>
              </div>
            </div>
          </div>
        </div>

        <div class="row justify-content-center">
          <div class="col-sm-10">
            <div class="row">
              <div class="col-sm-2 col-form-label">
                <%= f.label :name, "商品名", class: "col-form-label" %>
              </div>
              <div class="col-sm-10">
                <%= f.text_field :name, class: "form-control", placeholder: "商品名", style: "width: 100%;" %>
              </div>
            </div>
          </div>
        </div>

        <div class="row justify-content-center">
          <div class="col-sm-10">
            <div class="row">
              <div class="col-sm-2 col-form-label">
                <%= f.label :introduction, "商品説明", class: "col-form-label" %>
              </div>
              <div class="col-sm-10 my-3 ">
                <%= f.text_area :introduction, class: "form-control", placeholder: "ここに説明文を記述します", style: "width: 100%; height: 200px;" %>
              </div>
            </div>
          </div>
        </div>

        <div class="row justify-content-center">
          <div class="col-sm-10">
            <div class="row">
              <div class="col-sm-2 col-form-label">
                <%= f.label :genre_id, "ジャンル", class: "col-form-label" %>
              </div>
              <div class="col-sm-10">
                <%= f.collection_select :genre_id, @genres, :id, :name, { prompt: "--選択してください--" }, class: "form-select", style: "width: 100%;" %>
              </div>
            </div>
          </div>
        </div>

        <div class="row justify-content-center">
          <div class="col-sm-10">
            <div class="row">
              <div class="col-sm-2 col-form-label">
                <%= f.label :price_excluding_tax, "税抜価格", class: "col-form-label" %>
              </div>
              <div class="col-sm-10">
                <div class="input-group" style="width: 100%;">
                  <%= f.text_field :price_excluding_tax, class: "form-control", placeholder: "1000" %>
                  <span>円</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="row justify-content-center">
          <div class="col-sm-10">
            <div class="row">
              <div class="col-sm-2 col-form-label"> 
                <%= f.label :is_sale, "販売ステータス", class: "col-form-label" %>
              </div>
              <div class="col-sm-10 d-flex">
                <div class="form-check form-check-inline">
                  <%= f.radio_button :is_sale, true, id: "is_sale_true", class: "form-check-input" %>
                  <%= label :is_sale_true, "販売中", class: "form-check-label" %>
                </div>
                <div class="form-check form-check-inline">
                  <%= f.radio_button :is_sale, false, id: "is_sale_false", class: "form-check-input" %>
                  <%= label :is_sale_false, "販売停止中", class: "form-check-label" %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="row justify-content-center" style="margin-bottom: 40px;">
          <div class="col-12 d-flex justify-content-center">
            <%= f.submit "新規登録", class: "btn btn-success", style: "padding: 10px 30px;" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>