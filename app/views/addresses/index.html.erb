<h3>配送先登録/一覧</h3>

<%= form_with model: Address.new do |f| %>
  <%= f.label :post_code, "郵便番号(ハイフンなし)" %>
  <%= f.text_field :post_code %><br>
  <%= f.label :address, "住所" %>
  <%= f.text_field :address %><br>
  <%= f.label :name, "宛名" %>
  <%= f.text_field :name %><br>
  <%= f.submit '新規作成' %>
<% end %>

<table class="table">
  <tr>
    <td>郵便番号</td>
    <td>住所</td>
    <td>宛名</td>
    <td></td>
  </tr>
  <% if @addresses.present? %>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.post_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td><%= link_to "編集する", edit_address_path(address) %>
            <%= link_to "削除する", addresses_path(address), method: :delete %></td>
      </tr>
    <% end %>
    <% else %>
      <tr>
        <td colspan="3">データがありません</td>
      </tr>
    <% end %>
</table>

