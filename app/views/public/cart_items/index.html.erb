<h1>ショッピングカート</h1>
 <%= link_to "カートを空にする", destroy_all_public_cart_items_path, method: :delete, data: { confirm: "本当にカートを空にしますか？" }  %>
  <% if @cart_items.present? %>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @合計金額 = 0 %>  
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= (cart_item.item.price_excluding_tax * 1.1).floor %></td>
          <td>
            <%= form_with model: cart_item, url: public_cart_item_path(cart_item), method: :patch do |f| %>
              <%= f.number_field :amount, value: cart_item.amount, min: 1 %>
              <%= f.submit "変更" %>
            <% end %>
          </td>
          <td><%= cart_item.subtotal%></td>
          <td><%= link_to "削除", public_cart_item_path(cart_item), method: :delete, data: { confirm: "本当に削除しますか？" }  %></td>
           <% @合計金額 +=  (cart_item.item.price_excluding_tax * 1.1).floor * cart_item.amount %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <p>合計金額: <%= @合計金額 %></p>

  <%= link_to "情報入力に進む", new_order_path %>
<% else %>
  <p>カートに商品は入っていません。</p>
<% end %>
 <%= link_to "買い物を続ける", public_items_path %> 