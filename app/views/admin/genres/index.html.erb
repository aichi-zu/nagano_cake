<!-- ジャンル新規登録 -->
<%= form_with model: [:admin, @genre_new] do |form_g_n| %>
  <div class = "container">
    <div class = "row">
      <div class = "col-lg-3">
        <h4>ジャンル一覧・追加</h4>
      </div>
    </div>

    <div class = "row">
      <div class = "col-lg-2">
        ジャンル名
      </div>

      <div class = "col-lg-3">
        <%= form_g_n.text_field :name %>
      </div>

      <div class = "col-lg-2">
        <%= form_g_n.submit "新規登録", class: "btn btn-success"%>
      </div>
    </div>

  </div>
<% end %>
<!-- end of ジャンル新規登録 -->

<!-- ジャンル一覧・編集 -->
<%= form_with model: @genre_new, url: admin_genres_path do |form_g_n| %>
  <div class = "container">
    <div class = "row">
      <div class = "col-md-5">
        <table class = "table table-hover table-inverse">
          <thead>
            <th>ジャンル</th>
            <th></th>
          </thead>

          <tbody>
            <% @genre_all.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td>
                  <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
<!-- end of ジャンル一覧・編集 -->
