<div class="container">
  <div class="row" style="margin: 40px 0;">
    <div class="col-lg-12 d-flex align-items-center justify-content-between">
      <div class="title-background" style="background-color: #f0f0f0; padding: 0px 20px; border-radius: 4px; display: inline-block;">
        <h4 style="margin: 0;">商品詳細</h4>
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="row">
        <div class="col-md-6">
          <div class="d-flex justify-content-center">
            <% if @item.image.attached? %>
              <%= image_tag @item.get_image(400, 300), class: "img-fluid", style: "height: 300px;" %>
            <% else %>
              <%= image_tag "no_image.jpg", width: 400, height: 300, class: "img-fluid", style: "height: 300px;" %>
            <% end %>
          </div>
        </div>
        <div class="col-md-6">
          <table class="table">
             <tbody>
                <tr>
                  <th class="col-sm-12">商品名</th>
                  <td class="col-sm-12 "><%= @item.name %></td>
                </tr>
                <tr>
                  <th class="col-sm-12">商品説明</th>
                  <td class="col-sm-12"><%= @item.introduction %></td>
                </tr>
                <tr>
                  <th class="col-sm-12">ジャンル</th>
                  <td class="col-sm-12"><%= @item.genre.name %></td>
                </tr>
                <tr>
                  <th class="col-sm-12" >税込価格（税抜価格）</th>
                  <td class="col-sm-12">
                    <%= number_with_delimiter(@tax_included_price)%>
                    &#40;<%= number_with_delimiter(@item.price_excluding_tax) %>&#41;円
                  </td>
                </tr>             
                <tr>
                  <th class="col-sm-12">販売ステータス</th>
                  <td class="col-sm-12">
                    <% if @item.is_sale? %>
                      <span class="text-success" style="font-weight: bold;">販売中</span>
                    <% else %>
                      <span class="text-black-50" style="font-weight: bold;">販売停止中</span>
                    <% end %>
                  </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

      <div class="row justify-content-center" style="margin-bottom:140px;">
        <div class="col-12 d-flex justify-content-center">
          <%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success", style: "padding: 10px 30px;" %>
        </div>
      </div>
    </div>
  </div>

</div>
