<div class="container">
  <div class="row" style="margin: 40px; 0;">
    <div class="col-lg-12 d-flex align-items-center justify-content-between">
      <div class="title-background" style="background-color: #f0f0f0; padding: 0px 20px; border-radius: 4px;">
        <h4 style="margin: 0;">新規会員登録</h4>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <table class="table">
          <tbody>
            <tr>
              <th><%= f.label :name, "名前" %></th>
              <th><%= f.label :last_name, "(姓)" %></th>
              <th><%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder: "姓" %></th>
              <th><%= f.label :first_name, "(名)" %></th>
              <th><%= f.text_field :first_name, class: "form-control", placeholder: "名" %></th>
            </tr>
            <tr>
              <th><%= f.label :kana, "フリガナ" %></th>
              <th><%= f.label :last_name_kana, "(セイ)" %></th>
              <th><%= f.text_field :last_name_kana, autofocus: true, class: "form-control", placeholder: "セイ" %></th>
              <th><%= f.label :first_name_kana, "(メイ)" %></td>
              <th><%= f.text_field :first_name_kana, class: "form-control", placeholder: "メイ" %></th>
            </tr>
            <tr>
              <th><%= f.label :email, "メールアドレス" %></th>
              <td><%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "sample@example.com" %></td>
            </tr>
            <tr>
              <th><%= f.label :post_code, "郵便番号（ハイフンなし）" %></th>
              <td><%= f.text_field :post_code, class: "form-control", placeholder: "0000000" %></td>
            </tr>
            <tr>
              <th><%= f.label :address, "住所" %></th>
              <td><%= f.text_area :address, class: "form-control", placeholder: "東京都渋谷区代々木神園町0-0" %></td>
            </tr>
            <tr>
              <th><%= f.label :phone_number, "電話番号（ハイフンなし）" %></th>
              <td><%= f.text_field :phone_number, class: "form-control", placeholder: "00000000000" %></td>
            </tr>
            <tr>
              <th><%= f.label :encrypted_password, "パスワード" %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %>文字以上)</em>
                <% end %>
              </th>
              <td><%= f.password_field :encrypted_password, autocomplete: "new-password", class: "form-control" %></td>
            </tr>
            <tr>
              <th><%= f.label :encrypted_password_confirmation, "パスワード(確認用)" %></th>
              <td><%= f.password_field :encrypted_password_confirmation, autocomplete: "new-password", class: "form-control" %></td>
            </tr>
            <tr>
              <th></th>
              <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>

      <div class="row" style="margin: 40px; 0;">
        <div class="col-lg-12 d-flex align-items-center justify-content-between">
          <div class="title-background" style="background-color: #f0f0f0; padding: 0px 20px; border-radius: 4px;">
            <h4 style="margin: 0;">既に登録済みの方</h4>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <p>
            <%= link_to "こちら", new_user_session_path, style: "text-decoration: underline;" %>
            からログインしてください。
          </p>
        </div>
      </div>
    </div>
  </div>
</div>