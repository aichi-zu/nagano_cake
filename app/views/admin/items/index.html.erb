<div class="container">
  <div class="row" style="margin: 40px 0;">
    <div class="col-lg-12 d-flex align-items-center justify-content-between">
      <div class="title-background" style="background-color: #f0f0f0; padding: 0px 20px; border-radius: 4px;">
        <h4 style="margin: 0;">商品一覧</h4>
      </div>
      <%= link_to new_admin_item_path, class: "btn btn-primary rounded-circle bg-white text-dark", style: "width: 50px; height: 50px; display: flex; justify-content: center; align-items: center; border: 2px solid #ccc; box-shadow: 3px 3px 5px rgba(0,0,0,0.3);" do %>
        <span style="font-size: 24px; color: #333;">+</span>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <table class="table">
        <thead>
          <tr style="background-color: #f0f0f0;">
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item), style: "color: black; text-decoration: underline;" %></td>
              <td><%= item.price_excluding_tax %></td>
              <td><%= item.genre&.name %></td>
                <% if item.is_sale? %>
                  <td class="text-success"><strong>販売中</strong></td>
                <% else %>
                  <td class="text-black-50"><strong>販売停止中</strong></td>
                <% end %> 
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row" style="margin-bottom: 200px;">
    <div class="col-lg-12 d-flex justify-content-center">
      <%= paginate @items %>
    </div>
  </div>
</div>