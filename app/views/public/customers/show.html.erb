<div class="container">
  <div class="row" style="margin: 40px 0;">
    <div class="col-lg-12 d-flex align-items-center justify-content-between">
      <div class="title-background" style="background-color: #f0f0f0; padding: 0px 20px; border-radius: 4px;">
        <h4 style="margin: 0;">マイページ</h4>
      </div>
    </div>
  </div>

      <div class="row" style="margin: 20px 0;">
        <div class="col-lg-12">
          <div class="d-flex justify-content-left">
            <h4><strong>登録情報</strong></h4>
            <%= link_to '編集する', customers_information_edit_path, class: "btn btn-success ml-5" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-6">
          <table class="table table-bordered">
            <tbody>
              <tr>
                <td style="background-color: #f0f0f0;">氏名</td>
                <td><%= @customer.last_name %><%= @customer.first_name %></td>
              </tr>
              <tr>
                <td style="background-color: #f0f0f0;">カナ</td>
                <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
              </tr>
              <tr>
                <td style="background-color: #f0f0f0;">郵便番号</td>
                <td><%= @customer.post_code %></td>
              </tr>
              <tr>
                <td style="background-color: #f0f0f0;">住所</td>
                <td><%= @customer.address %></td>
              </tr>
              <tr>
                <td style="background-color: #f0f0f0;">電話番号</td>
                <td><%= @customer.phone_number %></td>
              </tr>             
              <tr>
                <td style="background-color: #f0f0f0;">メールアドレス</td>
                <td><%= @customer.email %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <div class="row" style="margin: 20px 0;">
        <div class="col-lg-12">
          <div class="d-flex justify-content-left">
          <h4><strong>配送先</strong></h4>
          <%= link_to '一覧を見る', addresses_path, class: "btn btn-primary ml-5" %>
          </div>
        </div>
      </div>

      <div class="row" style="margin: 20px 0;">
        <div class="col-lg-12">
          <div class="d-flex justify-content-left">
            <h4><strong>注文履歴</strong></h4>
            <%= link_to '一覧を見る', orders_path, class: "btn btn-primary ml-5" %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>