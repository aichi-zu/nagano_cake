<h1><%= "#{@customer.last_name}#{@customer.first_name}さんの会員詳細画面" %></h1>

<div class="row">
  <div class="col-md-6">
    <table class="table">
      <tbody>
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= "#{@customer.last_name} #{@customer.first_name}" %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= "#{@customer.last_name_kana} #{@customer.first_name_kana}" %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.post_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
           <% if @customer.is_active? %>
            <td class="text-success" >有効</td>
           <% else %>
            <td class="text-black-50" >退会</td>
           <% end %>   
        </tr>
        <tr>
         <th>
         </th>
         <td>
          <%= link_to '編集する', edit_admin_customer_path(@customer), class: 'btn btn-success me-50' %>
          <%= link_to '注文履歴一覧を見る', admin_top_path, class: 'btn btn-primary' %> 
         </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

