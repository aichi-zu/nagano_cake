<h3>会員情報編集</h3>

<%= form_with model: @customer, url:customers_information_path do |f| %>
  <%= f.label :name, "氏名" %>
  <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  <%= f.text_field :first_name, autocomplete: "first_name" %><br>
    <%= f.label :post_code, "郵便番号" %>
  <%= f.text_field :post_code, autocomplete: "post_code" %><br>
  <%= f.label :address, "住所" %>
  <%= f.text_field :address, autocomplete: "address" %><br>
  <%= f.label :phone_number, "電話番号" %>
  <%= f.text_field :phone_number, autocomplete: "phone_number" %><br>
  <%= f.label :email, "メールアドレス" %>
  <%= f.text_field :email, autocomplete: "email" %><br>
  <%= f.submit '変更内容を保存' %>
<% end %>

  <%= link_to '退会する', customers_unsubscribe_path %>
