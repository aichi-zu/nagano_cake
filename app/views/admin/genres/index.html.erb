<!-- ジャンル新規登録 -->
<%= form_with model: [:admin, @genre_new] do |form_g_n| %>
  <div class = "container">
      <div class="row" style="margin: 40px 0;">
        <div class="col-lg-12 d-flex align-items-center justify-content-between">
          <div class="title-background" style="background-color: #f0f0f0; padding: 0px 20px; border-radius: 4px;">
            <h4 style="margin: 0;">ジャンル一覧・追加</h4>
          </div>
        </div>
      </div>

    <div class = "row">
      <div class = "col-lg-2">
        <strong>
          ジャンル名
        </strong>
      </div>

      <div class = "col-lg-3">
        <%= form_g_n.text_field :name %>
      </div>

      <div class = "col-lg-2">
        <%= form_g_n.submit "新規登録", class: "btn btn-success"%>
      </div>
    </div>

  </div>
<% end %>
<!-- end of ジャンル新規登録 -->

<!-- ジャンル一覧・編集 -->
<div class = "container">
  <div class = "row">
    <div class = "col-md-5">
      <table class = "table table-hover table-inverse" style="margin-bottom: 300px;">
        <thead>
          <th>ジャンル</th>
          <th></th>
        </thead>

        <tbody>
          <% @genre_all.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td >
                <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<!-- end of ジャンル一覧・編集 -->
