<h3>マイページ</h3>

<p>登録情報</p>
<%= link_to '編集する', customers_information_edit_path %>

<table class="table">
  <tr>
    <td>名前</td>
    <td><%= @customer.last_name %><%= @customer.first_name %></td>
  </tr>
  <tr>
    <td>カナ</td>
    <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
  </tr>
